<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg2"
    >
    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="30dp">

        <ImageView
            android:id="@+id/img_In"
            android:layout_width="733dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginVertical="100dp"
            android:src="@drawable/instagram" />




        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inst_email"
            android:hint="Email"
            android:singleLine="true"
            android:padding="15dp"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:background="@drawable/inner_bg2"
            android:layout_below="@id/img_In"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inst_pass"
            android:hint="Password"
            android:layout_below="@+id/inst_email"
            android:singleLine="true"
            android:padding="15dp"
            android:background="@drawable/inner_bg2"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"/>


        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="30dp"
            android:id="@+id/btn_login2"
            android:background="@drawable/button1"
            android:text="login"
            android:layout_below="@id/inst_pass" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login2"
            android:text="Forgot your login details?Get help signing in"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="35dp"
            ></TextView>


        <RelativeLayout
            android:id="@+id/line_2"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="560dp">

            <View
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:layout_margin="12dp"
                android:background="@android:color/white" />

            <View
                android:layout_width="140dp"
                android:layout_height="1dp"
                android:layout_alignParentRight="true"
                android:layout_margin="12dp"
                android:background="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:padding="2dp"
                android:text="OR"
                android:textColor="@color/white" />
        </RelativeLayout>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_marginTop="590dp"
            android:layout_marginHorizontal="120dp"
            android:text="Log In With Facebook"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#4A4305"
        android:text="Don't Have Account?  Sign Up"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#BFB559" />
</RelativeLayout>
